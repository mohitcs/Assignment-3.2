<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_v_margin"
    android:paddingLeft="@dimen/activity_h_margin"
    android:paddingRight="@dimen/default_padding"
    android:paddingTop="@dimen/default_padding"

    android:orientation="vertical"
    tools:context=".Linear">

    <TextView
        android:id="@+id/txtone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome !"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/big_text"
        android:padding="@dimen/activity_v_margin"/>

    <TextView
        android:id="@+id/txttwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/big_text"
        android:padding="@dimen/activity_v_margin"/>

    <TextView
        android:id="@+id/txtthree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Personal Programmer !"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/big_text"
        android:padding="@dimen/activity_v_margin"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="OK"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        />

</LinearLayout>